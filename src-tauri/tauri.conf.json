{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Book Keeper",
  "version": "0.1.0",
  "identifier": "com.bookkeeper.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5174",
    "beforeDevCommand": "bun dev",
    "beforeBuildCommand": "bun build"
  },
  "app": {
    "windows": [
      {
        "title": "Book Keeper",
        "width": 1600,
        "height": 1000,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "shortDescription": "Local-first personal finance application",
    "longDescription": "Book Keeper is a local-first personal finance application with retro Desktop Environment themes (KDE, AIX, BeOS, CDE). Track transactions, manage budgets, and monitor accounts with full data privacy.",
    "category": "Finance",
    "macOS": {
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    }
  }
}
